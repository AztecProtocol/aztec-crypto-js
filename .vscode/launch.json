    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "useWSL": true,
            "args": [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors", "--recursive",
                "aztec-crypto-js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Deployer",
            "program": "${workspaceFolder}/aztec-crypto-js/web3Utils/deployer.js",
            "useWSL": true,
            "args": [],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Truffle Test",
            "program": "${workspaceRoot}/node_modules/truffle/build/cli.bundled.js",
            "useWSL": true,
            "args": ["test"],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/test/**/*"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}